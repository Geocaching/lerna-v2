{
  "version": "independent",
  "npmClient": "npm",
  "packages": ["packages/*", "apps/*"],
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "ci: publish",
      "registry": "https://registry.npmjs.org"
    },
    "version": {
      "conventionalCommits": true,
      "exact": true,
      "message": "ci: version"
    }
  },
  "ignoreChanges": ["**/rollup.config.mjs"]
}
